<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_popup_detector"
    android:focusable="false"
    android:clickable="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_popup_camera"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_camera"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_popup_album"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_popup_camera"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_popup_url"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_url"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_popup_album"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="33dp"
        android:layout_height="14dp"
        android:id="@+id/btn_popup_close"
        android:background="@drawable/btn_close_pop"
        app:layout_constraintTop_toBottomOf="@id/btn_popup_album"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toRightOf="@id/btn_popup_camera"
        android:layout_marginStart="42dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>